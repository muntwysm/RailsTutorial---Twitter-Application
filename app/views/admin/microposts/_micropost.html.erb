<tr>
  <td class="micropost">
    <span class="user">
      <%= link_to h(micropost.user.name), micropost.user %>
    </span>
    <span class="content"><%= h micropost.content %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    </span>
	</td>
	<td class="micropost">
    <%= link_to 'Edit', edit_admin_micropost_path(micropost) %>
    <%= link_to "Delete", [:admin, micropost], :method => :delete,
                                     :confirm => "You sure?" %>
		</td>
  </td>
</tr>

